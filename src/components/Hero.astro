---
import { Image } from "@astrojs/image/components";
import Nav from "./Nav";
---

<section
  class="bg-gradient-to-tl from-blue to-cyan pl-5 md:pl-0 min-h-screen pb-5"
>
  <nav class="flex justify-between md:justify-around items-center md:pt-[2rem]">
    <div class="flex items-center pt-[2rem] md:pt-0">
      <div class="w-[50px] h-[50px]">
        <Image
          src="/chui.png"
          width={60}
          height={60}
          alt="logo"
          aspectRatio={16 / 9}
          format="png"
          fit="cover"
        />
      </div>
      <h3 class="text-lg tracking-wider uppercase text-white font-medium pl-5">
        Chui Forums
      </h3>
    </div>

    <Nav client:idle />
  </nav>
  <div
    class="flex flex-col md:flex-row md:justify-around md:items-center mt-[2rem] md:mt-[4rem]"
  >
    <div>
      <div class="flex flex-col text-white">
        <h5 class="font-regular text-[2.8rem] md:text-[5rem] text-[#d8e6ed]">
          Andika Wazo Lako
        </h5>
        <p class="font-medium text-[3rem] md:text-[6rem]"> Ushinde 1,000,000! </p>
      </div>

      <div class="md:flex">
        <div class="w-[290px] mx-[-15px] md:mx-0 h-[100px] cursor-pointer">
          <a
            href="https://play.google.com/store/apps/details?id=com.magofarm.mobivet&pli=1"
          >
            <Image
              src="/google.png"
              alt="Hero Picture"
              width={800}
              height={300}
              aspectRatio={16 / 9}
              format="png"
              fit="cover"
            />
          </a>
        </div>

        <div class="w-[250px] h-[90px] cursor-pointer md:mt-[15px]">
          <a href="https://apps.apple.com/app/id1571301972">
            <Image
              src="/epo.png"
              alt="Hero Picture"
              width={646}
              height={200}
              aspectRatio={16 / 9}
              format="png"
              fit="cover"
            />
          </a>
        </div>
      </div>
    </div>
    <div class="w-[200px] h-[400px] md:w-[230px] z-10 md:mt-0 relative">
      <div
        class="h-[350px] w-[350px] -right-5 bg-cyan blur-3xl top-[20%] rounded-full absolute z-[-1] hidden md:block"> 

      
      </div>
    </div>
  </div>
</section>
