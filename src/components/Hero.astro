---
import { Image } from "@astrojs/image/components";
---

<section class="bg-gradient-to-tl from-blue to-cyan pl-5">
  <nav class="flex items-center pt-[2rem]">
    <div class="w-[50px] h-[50px]">
      <Image
        src="/logo.png"
        width={60}
        height={60}
        alt="logo"
        aspectRatio={16 / 9}
        format="png"
        fit="cover"
      />
    </div>
    <h3 class="text-lg tracking-wider uppercase text-white font-medium">
      Chui Academy
    </h3>
  </nav>
  <div
    class="flex flex-col md:flex-row md:justify-center md:gap-[4rem] md:items-center mt-[3rem]"
  >
    <div>
      <div class="flex flex-col text-white">
        <h3 class="font-regular text-[2rem] md:text-[3rem]">Piga hatua na</h3>
        <p class="font-medium text-[2.4rem] md:text-[3.2rem]">Chui Academy.</p>
      </div>

      <a
        href="https://play.google.com/store/apps/details?id=com.magofarm.mobivet&pli=1"
      >
        <div class="w-[200px] h-[100px] cursor-pointer">
          <Image
            src="/google.png"
            alt="Hero Picture"
            width={646}
            height={250}
            aspectRatio={16 / 9}
            format="png"
            fit="cover"
          />
        </div>
      </a>
    </div>
    <div class="w-[200px] h-[400px] mt-5 md:mt-0 mb-[30px]">
      <Image
        src="/hero3.png"
        alt="Hero Picture"
        width={300}
        height={612}
        aspectRatio={16 / 9}
        format="png"
        fit="cover"
      />
    </div>
  </div>
</section>
